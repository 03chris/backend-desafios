html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    title Home
  body.text-center 
    div(class="container col-3")
        h3 Products Detail
            main.container.mt-5
                .card.mb-3
                img.card-img-top.w-25.mx-auto(src=`${idProduct.photo}`, alt=`${idProduct.title}`)
                hr
                .card-body.text-center
                    h1#title.card-title #{idProduct.title}
                    p#description.card-text
                    | #{idProduct.description}
                    p.card-text
                    small#price.text-muted $#{idProduct.price}
    a.btn.btn-danger(href="/api/products") Back
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
